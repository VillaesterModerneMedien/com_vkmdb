<?xml version="1.0" encoding="utf-8"?>
<form>
    <config>
		<inlinehelp button="show"/>
	</config>
    
    <fieldset addfieldprefix="VkmdbNamespace\Component\Vkmdb\Administrator\Field">
        <field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
        <field
			name="title"
			type="text"
			label="COM_VKMDB_FIELD_TITLE_LABEL"
			description="COM_VKMDB_FIELD_TITLE_DESC"
			class="input-xxlarge"
			default=""
			required="true"
        />
    </fieldset>

	<fieldset name="contactdetails" label="COM_VKMDB_FIELDSET_CONTACTDETAILS">
		<field name="Kontakttyp" type="text" label="Kontakttyp" />
		<field name="Organisation" type="text" label="Organisation" />
		<field name="Organisationsform" type="text" label="Organisationsform" />
		<field name="Rechtsform" type="text" label="Rechtsform" />
		<field name="Branche" type="text" label="Branche" />
		<field name="Name" type="text" label="Name" />
		<field name="Personendaten" type="text" label="Personendaten" />
		<field name="Vorname" type="text" label="Vorname" />
		<field name="Nachname" type="text" label="Nachname" />
		<field name="Straße" type="text" label="Straße" />
		<field name="Hausnummer" type="text" label="Hausnummer" />
		<field name="PLZ" type="text" label="PLZ" />
		<field name="Ort" type="text" label="Ort" />
		<field name="Adresszusatz" type="text" label="Adresszusatz" />
		<field name="Geburtsdatum" type="calendar" label="Geburtsdatum" translateformat="true" showtime="false" />
	</fieldset>
	<fieldset name="moreInformations" label="COM_VKMDB_FIELDSET_MOREINFORMATIONS">
		<field name="Kontaktdaten2" type="json" label="Kontaktdaten2" />
		<field name="Jobs" type="text" label="Jobs" />
		<field name="Beziehungen" type="text" label="Beziehungen" />
		<field name="Medizinische Daten" type="textarea" label="Medizinische Daten" />
		<field name="Hobbies" type="textarea" label="Hobbies" />
		<field name="Mitarbeiterdaten" type="textarea" label="Mitarbeiterdaten" />
		<field name="Bemerkungen" type="textarea" label="Bemerkungen" />
		<field name="System" type="text" label="System" />
		<field name="Anzeigename" type="text" label="Anzeigename" />
		<field name="Client_ID" type="text" label="Client_ID" />
		<field name="Beziehungen2" type="text" label="Beziehungen2" />
	</fieldset>
	<fieldset name="hiddenFields" label="COM_VKMDB_FIELDSET_HDDEN_FIELDS">
		<field
				name="id"
				type="text"
				label="JGLOBAL_FIELD_ID_LABEL"
				default="0"
				class="readonly"
				readonly="true"
		/>
	</fieldset>
</form>
